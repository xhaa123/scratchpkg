version=10.2.0
source=(https://mirrors.aliyun.com/gnu/gcc/gcc-$version/gcc-$version.tar.xz)

build()
{
cd  gcc-$version

mkdir -v build
cd       build

../libstdc++-v3/configure           \
    --host=$LFS_TGT                 \
    --prefix=/tools                 \
    --disable-multilib              \
    --disable-nls                   \
    --disable-libstdcxx-threads     \
    --disable-libstdcxx-pch         \
    --with-gxx-include-dir=/tools/$LFS_TGT/include/c++/$version

make
make install
}
